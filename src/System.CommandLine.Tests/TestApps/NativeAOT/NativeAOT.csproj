<Project Sdk="Microsoft.NET.Sdk">
	
  <PropertyGroup>
    <TargetFramework>$(NetMinimum)</TargetFramework>
    <OutputType>Exe</OutputType>
    <!-- producing more detailed log output -->
    <TrimmerSingleWarn>false</TrimmerSingleWarn>
    <PublishAot>true</PublishAot>
  </PropertyGroup>

  <PropertyGroup>
    <SystemCommandLineDllPath Condition="'$(SystemCommandLineDllPath)' == ''">..\..\..\System.CommandLine\bin\$(Configuration)\$(TargetFramework)\System.CommandLine.dll</SystemCommandLineDllPath>
  </PropertyGroup>

  <ItemGroup>
    <ReferencePath Include="$(SystemCommandLineDllPath)" />
  </ItemGroup>

</Project>
